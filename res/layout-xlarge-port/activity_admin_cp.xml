<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Admin_cp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/admin_cp_instr"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dip"
        android:text="@string/admin_cp_name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignRight="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dip"
        android:text="@string/admin_cp_qn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dip"
        android:text="@string/admin_cp_time" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dip"
        android:text="@string/admin_cp_deadl" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/textView5"
        android:layout_marginTop="20dip"
        android:text="@string/admin_cp_syllabus" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="150dip"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="20dip"
        android:inputType="text">
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="60dip"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignBottom="@+id/textView3"
        android:inputType="number"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="60dip"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignBottom="@+id/textView4"
		android:inputType="number"/>

<!--     <DatePicker -->
<!--         android:id="@+id/datePicker1" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="100dip" -->
<!--		 android:textSize="40sp" -->
<!--         android:layout_alignLeft="@+id/editText1" -->
<!--         android:layout_alignBottom="@+id/textView5"/> -->
	<Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignBaseline="@+id/textView5"
        android:text="@string/admin_cp_date"/>
    
    <EditText
        android:id="@+id/editText4"
        android:layout_width="fill_parent"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="12dip"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:text="@string/admin_quest_upd" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:textSize="40sp"
        android:layout_alignBottom="@+id/button1"
        android:layout_toLeftOf="@+id/button1"
        android:layout_marginRight="2dip"
        android:text="@string/populate" />

</RelativeLayout>